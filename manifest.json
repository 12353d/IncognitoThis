{
    "name": "IncognitoThis",
    "version": "1.3.0",
    "description": "Instantly open the current website in an Incognito Window!",
    "manifest_version": 2,
    "permissions": ["tabs"],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "browser_action": {
        "default_icon": "images/IncognitoThis.png",
        "default_title": "Instantly open the current website in an Incognito Window!",
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "images/IncognitoThis-16.png",
        "32": "images/IncognitoThis-32.png",
        "48": "images/IncognitoThis-48.png",
        "128": "images/IncognitoThis-128.png"
    }
}